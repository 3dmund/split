# Uncomment this line to define a global platform for your project
platform :ios, ‘8.0’

target 'Split' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Split
  pod ‘Firebase/Core’	
  pod 'Firebase/Auth'
  pod 'Firebase'
  pod 'Bolts'
  pod 'FBSDKCoreKit'
  pod 'FBSDKShareKit'
  pod 'FBSDKLoginKit'
  pod 'Firebase/Database'

  target 'SplitTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'SplitUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
